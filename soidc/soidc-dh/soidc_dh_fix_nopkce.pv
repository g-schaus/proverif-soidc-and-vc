(* --------------------------------------------------------------------------------------------------------- *)

let app(talksOnlyToHonest:bool, c:channel, a:bitstring, ska:SecretKey, b:bitstring, pkb:PublicKey, i:bitstring, pki:PublicKey) =

    (* !Connecting to Browser *)

    (* Message 1 *)
    in(c, m_1:bitstring);
    let (tag1':bitstring, bitgx:bitstring) = m_1 in
    if (tag1 = tag1') then
    let gx = unbitG(bitgx) in

    (* Message 2 *)
    new y: exponent;
    let gy = g(y) in
    let k1 = GtoSymK(exp(gx, y)) in
    let m_2 = (tag2, bitG(gy), enc(sign((gy, gx), ska), k1)) in
    out(c, m_2);

    (* !Talking to Browser*)

    (* Message 3 *)
    new scope:bitstring;
    let m_3 = enc((tag3, a, scope), k1) in
    event appSendsLastMessageToBrowser(m_1, m_2, m_3);
    out(c, m_3);

    (* ... Waiting For Issuer Response While It Talks To The Browser ... *)

    (* Message 8 *)
    in(c, m_8:bitstring);
    let (tag8':bitstring, code:bitstring, i':bitstring) = dec(m_8, k1) in
    if (tag8 = tag8') then
    if (i = i') then

    (* !Connecting to Issuer *)
 
    (* Message 9 *)
    new x:exponent;
    let gx = g(x) in
    let m_9 = (tag9, bitG(gx)) in
    out(c, m_9);

    (* Message 10 *)
    in(c, m_10:bitstring);
    let (tag10':bitstring, bit_gy:bitstring, enc_signature:bitstring) = m_10 in
    if (tag10 = tag10') then
    let gy = unbitG(bit_gy) in
    let k3 = GtoSymK(exp(gy, x)) in
    if (gy, gx) = check(dec(enc_signature, k3), pki) then

    (* !Talking to Issuer*)

    (* Message 11 *)
    new sks:SecretKey;
    new jti:bitstring;
    let T2 = (a, jti, code) in
    let m_11 = enc((tag11, pk(sks), sign(T2, sks)), k3) in
    event appSendsLastMessageToIssuer(m_9, m_10, m_11);
    out(c, m_11);

    (* Message 12 *)
    in(c, m_12:bitstring);
    out(c, check_reach_app);
    let (tag12':bitstring, signed_M:bitstring) = dec(m_12, k3) in
    if (tag12 = tag12') then
    let M = check(signed_M, pki) in
    let (jtk:bitstring, jti':bitstring, scope':bitstring, a':bitstring, i':bitstring, b':bitstring) = M in

    if (jtk = hash_pk(pk(sks))) then
    if (jti = jti') then
    if (scope = scope') then
    if (a = a') then
    if (i = i') then
    if (b = b') then

    (* --------------------------------------------------------------------------------------- *)
    (* Query Preparations *)

    if talksOnlyToHonest then

    out(c, check_reach_app);

    event appCompletesProtocol(m_1, m_2, m_3, m_8, m_9, m_10, m_11, m_12);

    out(ch(code), free_code);

    0.

let browser(talksOnlyToHonest:bool, c:channel, b:bitstring, skb:SecretKey, a:bitstring, pka:PublicKey, i:bitstring, pki:PublicKey, password:bitstring) =

    (* !Connecting to App *)

    (* Message 1 *)
    new x:exponent;
    let gx = g(x) in
    let m_1 = (tag1, bitG(gx)) in
    out(c, m_1);

    (* Message 2 *)
    in(c, m_2:bitstring);
    let (tag2':bitstring, bit_gy:bitstring, enc_signature:bitstring) = m_2 in
    if (tag2 = tag2') then
    let gy = unbitG(bit_gy) in
    let k1 = GtoSymK(exp(gy, x)) in
    if (gy, gx) = check(dec(enc_signature, k1), pka) then

    (* !Talking to App *)

    (* Message 3 *)
    in(c, m_3:bitstring);
    let (tag3':bitstring, a':bitstring, scope:bitstring) = dec(m_3, k1) in
    if (tag3 = tag3') then
    if (a = a') then

    (* !Connecting to Issuer *)

    (* Message 4 *)
    new x:exponent;
    let gx = g(x) in
    let m_4 = (tag4, bitG(gx)) in
    out(c, m_4);

    (* Message 5 *)
    in(c, m_5:bitstring);
    let (tag5':bitstring, bit_gy:bitstring, enc_signature:bitstring) = m_5 in
    if (tag5 = tag5') then
    let gy = unbitG(bit_gy) in
    let k2 = GtoSymK(exp(gy, x)) in
    if (gy, gx) = check(dec(enc_signature, k2), pki) then

    (* !Talking to Issuer *)

    (* Message 6 *)
    let m_6 = enc((tag6, a, scope, b, password), k2) in
    event browserSendsLastMessageToIssuer(m_4, m_5, m_6);
    out(c, m_6);

    (* Message 7 *)
    in(c, m_7:bitstring);
    let (tag7':bitstring, code:bitstring, i':bitstring) = dec(m_7, k2) in
    if (tag7 = tag7') then
    if (i = i') then

    (* !Talking to App *)

    (* Message 8 *)
    let m_8 = enc((tag8, code, i), k1) in
    event browserSendsLastMessageToApp(m_1, m_2, m_3, m_8);
    out(c, m_8);

    (* --------------------------------------------------------------------------------------- *)
    (* Query Preparations *)

    if talksOnlyToHonest then

    out(c, check_reach_browser);

    event browserCompletesProtocol(m_1, m_2, m_3, m_4, m_5, m_6, m_7);

    out(ch(code), free_code);
    out(ch(password), free_password);

    0.

let issuer(talksOnlyToHonest:bool, c:channel, i:bitstring, ski:SecretKey, a:bitstring, pka:PublicKey, b:bitstring, pkb:PublicKey, password:bitstring) =

    (* !Connecting to Browser *)

    (* Message 4 *)
    in(c, m_4:bitstring);
    let (tag4':bitstring, bitgx:bitstring) = m_4 in
    if (tag4 = tag4') then
    let gx = unbitG(bitgx) in

    (* Message 5 *)
    new y: exponent;
    let gy = g(y) in
    let k2 = GtoSymK(exp(gx, y)) in
    let m_5 = (tag5, bitG(gy), enc(sign((gy, gx), ski), k2)) in
    out(c, m_5);

    (* !Talking to Browser *)

    (* Message 6 *)
    in(c, m_6:bitstring);
    let (tag6':bitstring, a':bitstring, scope:bitstring, b':bitstring, password':bitstring) = dec(m_6, k2) in
    if (tag6 = tag6') then

    if (a = a') then
    if (b = b') then
    if (password = password') then

    (* Message 7 *)
    new code:bitstring;
    let m_7 = enc((tag7, code, i), k2) in
    event issuerSendsLastMessageToBrowser(m_4, m_5, m_6, m_7);
    out(c, m_7);

    (* Waiting for Browser to transfer code to App *)

    (* !Connecting to App *)
     
    (* Message 9 *)
    in(c, m_9:bitstring);
    let (tag9':bitstring, bitgx:bitstring) = m_9 in
    if (tag9 = tag9') then
    let gx = unbitG(bitgx) in

    (* Message 10 *)
    new y: exponent;
    let gy = g(y) in
    let k3 = GtoSymK(exp(gx, y)) in
    let m_10 = (tag10, bitG(gy), enc(sign((gy, gx), ski), k3)) in
    out(c, m_10);

    (* !Talking to App*)

    (* Message 11 *)
    in(c, m_11:bitstring);
    let (tag11':bitstring, pksks:PublicKey, signature:bitstring) = dec(m_11, k3) in
    if (tag11 = tag11') then
    let (a'':bitstring, jti:bitstring, code':bitstring) = check(signature, pksks) in

    if (a = a'') then
    if (code = code') then

    (* Message 12 *)
    let jtk = hash_pk(pksks) in
    let M = (jtk, jti, scope, a, i, b) in
    let m_12 = enc((tag12, sign(M, ski)), k3) in
    event issuerSendsLastMessageToApp(m_9, m_10, m_11, m_12);
    out(c, m_12);

    (* --------------------------------------------------------------------------------------- *)
    (* Query Preparations *)

    if talksOnlyToHonest then

    out(c, check_reach_issuer);

    event issuerCompletesProtocol(m_4, m_5, m_6, m_9, m_10, m_11);

    out(ch(code), free_code);
    out(ch(password), free_password);

    0.

