free c:channel.
process (*use root process for setup *)

    (* create identities *)
    new a:bitstring;
    new b:bitstring;
    new i:bitstring;

    (*advertise identities*)
    out(c,a);
    out(c,b);
    out(c,i);

    (*declare secret keys*)
    new ska:SecretKey;
    new skb:SecretKey;
    new ski:SecretKey;

    (*advertise public keys*)
    out(c,pk(ska));
    out(c,pk(skb));
    out(c,pk(ski));

    (*generate variables*)
    new password:bitstring;

    (*let agents dance*)
    (
        ! open_app      (c, a, ska, b, pk(skb), i, pk(ski))
      | ! open_browser  (c, b, skb, a, pk(ska), i, pk(ski), password)
      | ! open_issuer   (c, i, ski, a, pk(ska), b, pk(skb), password)
    )

